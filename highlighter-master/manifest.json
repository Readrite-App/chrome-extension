{
    "manifest_version": 2,
    "name": "ReadRite",
    "description": "Your right to information is an important part of the democratic process. ReadRite builds trust in the news you consume.",
    "version": "0.0.1",

    "icons": {
        "16": "images/16.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },

    "browser_action": {
        "default_icon": {
            "16": "images/16.png",
            "48": "images/48.png",
            "128": "images/128.png"
        },
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/jquery-3.5.1.min.js", "js/axios.min.js", "js/popper.min.js", "js/tippy.min.js", "utils/storageManager.js", "utils/highlight.js", "utils/errorManager.js",
                   "contentScripts/main.js"],
            "css": ["css/bootstrap.min.css", "showpopup.css"],
            "all_frames": true
        }
    ],

    "background": {
        "scripts": [ "js/jquery-3.5.1.min.js", "js/axios.min.js", "background.js"]
    },
    
    "permissions": [
        "tabs",
        "contextMenus",
        "storage",
        "<all_urls>"
    ],

    "web_accessible_resources": [
        "images/*",
        "hoverTools.html"
    ],

    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
